{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",      
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,      
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": [ "node" ]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}